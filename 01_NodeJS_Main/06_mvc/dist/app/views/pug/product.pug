extends layouts/main-layout.pug

block title
  title #{headTitle}


block content
  .product-form
      h1.heading-1 Product Page
      .main-content__text
        h2.heading-2 Create a new product
        form.form(action='/products' method='post')
          input.form__input(type='text' name='title' placeholder='Product Name')
          button.btn.btn-primary.form__button(type='submit')
            | Add Product