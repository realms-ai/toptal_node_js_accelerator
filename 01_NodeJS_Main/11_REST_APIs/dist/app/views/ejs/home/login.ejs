<%- include('../includes/_head.ejs') %> <%- include('../includes/_header.ejs')
%>
<h1 class="heading-1">Login Page</h1>
<% if(errors.length > 0) { %>
<div class="signup-errors mt5 mb5">
  <h3 class="mb2">Error</h3>
  <ol>
    <% errors.forEach((error, index) => { %>
    <li><%= error %></li>
    <% }) %>
  </ol>
</div>
<% } %>
<div class="main-content__text">
  <div class="login mt5">
    <form action="http://localhost:3000/login" method="POST" class="form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <input
        type="text"
        name="email"
        class="form__input"
        placeholder="Email"
        value="Grover83@yahoo.com" />
      <input
        type="password"
        name="password"
        class="form__input"
        placeholder="Password"
        value="password" />
      >
      <button class="btn btn-primary form__button" type="submit">Login</button>
    </form>
  </div>
</div>
<%- include('../includes/_end.ejs') %>
